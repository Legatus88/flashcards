<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('.email') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to t('common.show'), user %></td>
        <td><%= link_to t('common.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('common.delete'), user, method: :delete, data: { confirm: t('common.confirmation') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
