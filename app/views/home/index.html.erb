<script>
var i = 0;	
function tik() {
	$.ajax({
		cache: false,
		success: function() {
			$('#answer_time').val(i++);
		}
	});
}

$(document).ready(function(){  
    tik();  
	setInterval('tik()',1000);  
});

</script>

<p><%= t('.main_title') %></p>

<div>
	<% unless @random_card %>
	  <p><%= t('.no_cards') %></p>
	<% else %>
	  <p><%= t('.translate') %></p>
	  <p><b><%= @random_card.translated_text %></b></p>

	  <%= form_tag("/check", method: "post") do %>
	    <%= label_tag(:user_text, "#{t('.translation')}") %>
      	<%= text_field_tag(:user_text) %>
      	<%= hidden_field_tag(:id, @random_card.id) %>
      	<%= hidden_field_tag(:answer_time, 5) %>
      	<%= submit_tag("#{t('common.check_button')}") %>
      <% end %>
      <br />
      <%= image_tag(@random_card.image.url(:thumb)) if @random_card.image.exists? %><br />
  
	<% end %>
</div>
