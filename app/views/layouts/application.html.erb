<!DOCTYPE html>
<html>
  <head>
    <title>Flashcards</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <span class="navbar-brand">
        <%= link_to 'Флешкарточкер', root_path %>
      </span>
      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to 'Все карточки', cards_path %> |
            <%= link_to 'Добавить карточку', new_card_path %> |
            <%= link_to 'Колоды', decks_path %> |
            <%= link_to 'Login with Twitter', auth_at_provider_path(provider: :twitter) %>
          </li>
        </ul>
        <ul class="nav justify-content-end">
          <li>
            <% if current_user %>
            <%= link_to "Edit Profile", edit_user_path(current_user.id) %> |
              <%= link_to "Logout", :logout, method: :post %>
            <% else %>
              <%= link_to "Register", new_user_path %> |
              <%= link_to "Login", :login %>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    

    <main role="main" class="container">
      <div>
        <p id="notice"><%= flash[:notice] %></p>
        <p id="alert"><%= flash[:alert] %></p>
        <p id="correct_word"><%= flash[:correct_word] %></p>
        <p id="users_word"><%= flash[:users_word] %></p>
      </div>    

      <div class="starter-template">
        <%= yield %>
      </div>
    </main>
  </body>
</html>



